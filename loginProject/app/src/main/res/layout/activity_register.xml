<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/lblWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Únete"
            android:fontFamily="@font/gilroy_extra_bold"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:gravity="center"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/lblRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Regístrate aquí y disfruta de la magia"
            android:fontFamily="@font/avenir_text_regular"
            android:textColor="@color/gray_500"
            android:textSize="15dp"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="20dp" />

        <EditText
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:drawableLeft="@drawable/custom_name_icon"
            android:drawablePadding="10dp"
            android:hint="Usuario"
            android:background="@drawable/custom_txt"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:fontFamily="@font/avenir_text_regular"/>

        <RadioGroup
            android:id="@+id/rGroupGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rBtnMan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hombre"
                android:checked="true"
                android:fontFamily="@font/avenir_text_regular"/>

            <RadioButton
                android:id="@+id/rBtnWoman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mujer"
                android:layout_marginLeft="50dp"
                android:fontFamily="@font/avenir_text_regular"/>
        </RadioGroup>

        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:drawableLeft="@drawable/custom_email_icon"
            android:drawablePadding="10dp"
            android:hint="Correo electrónico"
            android:background="@drawable/custom_txt"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:padding="10dp"
            android:fontFamily="@font/avenir_text_regular"/>

        <EditText
            android:id="@+id/txtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/custom_password_icon"
            android:drawablePadding="10dp"
            android:hint="Contraseña"
            android:background="@drawable/custom_txt"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:fontFamily="@font/avenir_text_regular"/>

        <ProgressBar
            android:id="@+id/pBarLoading"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Regístrarse"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            android:fontFamily="@font/gilroy_extra_bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="40dp">

            <TextView
                android:id="@+id/lblLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilroy_extra_bold"
                android:gravity="end"
                android:text="¿Ya tienes cuenta?"
                android:textAlignment="textEnd"
                android:textColor="@color/gray_500"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/lblLoginButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/gilroy_extra_bold"
                android:gravity="start"
                android:text="Ingresa aquí"
                android:textAlignment="textStart"
                android:textColor="@color/orange_500"
                android:textSize="13dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>